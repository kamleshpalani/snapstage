{
  "expo": {
    "name": "SnapStage",
    "slug": "snapstage",
    "version": "1.0.0",
    "scheme": "snapstage",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0284c7"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "io.snapstage.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "SnapStage needs access to your photos to upload room images for staging.",
        "NSCameraUsageDescription": "SnapStage needs camera access to take room photos for staging.",
        "NSPhotoLibraryAddUsageDescription": "SnapStage needs permission to save staged images to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0284c7"
      },
      "package": "io.snapstage.app",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "SnapStage needs access to your photos to upload room images.",
          "cameraPermission": "SnapStage needs camera access to take room photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
